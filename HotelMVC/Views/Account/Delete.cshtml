@model HotelMVC.Models.ApplicationUser

@{
    ViewBag.Title = "Usuń użytkownika";
}

<h2>@ViewBag.Title</h2>

<h3>Czy na pewno chcesz usunąć teego użytkownika?</h3>
<div>
    <h4>Użytkownik</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UprawnienieString)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UprawnienieString)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            @Html.ActionLink("Powrót do listy użytkowników", "UserList")
        </div>
    }
</div>
