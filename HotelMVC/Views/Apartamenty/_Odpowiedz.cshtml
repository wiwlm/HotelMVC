@model HotelMVC.Models.WizytyDisplayViewModel

@{
    ViewBag.Title = "Odpowiedz";
}

@using (Html.BeginForm("Odpowiedz", "Apartamenty"))
{
    @Html.AntiForgeryToken()

    <table style="width:100%" border="0">
        <tr>
            <td>
                @Html.HiddenFor(model => model.IdWizyty)

                <div class="form-group">
                    @Html.LabelFor(model => model.Odpowiedz, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Odpowiedz, 3, 200, new { @class = "form-control", @style = "max-width: 100%; width:100%" })
                    </div>
                </div>

                <div class="form-group"  style="margin-top:20px">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Odpowiedz" class="btn btn-default" />
                    </div>
                </div>
            </td>
        </tr>
    </table>
}